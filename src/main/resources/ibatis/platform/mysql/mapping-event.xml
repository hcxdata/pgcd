<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd" >
<sqlMap namespace="event">
	<resultMap class="com.jetyun.pgcd.dao.domain.Event" id="eventMap">
		<result property="id" jdbcType="int" column="event_id" />
		<result property="desc" jdbcType="VARCHAR" column="event_desc" />
		<result property="featureWord" jdbcType="VARCHAR" column="event_feature_word" />
		<result property="newsNum" jdbcType="int" column="newsNum" />
		<result property="time" jdbcType="VARCHAR" column="event_time" />
	</resultMap>

	<select id="getEventList" parameterClass="java.util.Map"
		resultMap="eventMap">
		SELECT
		event_id,event_desc,event_feature_word,event_time,(
			select count(1) from topic_info b join content_info c on b.topic_id = c.topic_id where b.event_id = a.event_id
		) as newsNum
		FROM
		event_info a
		order by event_time desc 
	</select>
	<select id="getEventListCount" parameterClass="java.util.Map"
		resultClass="int">
		SELECT
		count(1)
		FROM
		event_info a
	</select>
</sqlMap>